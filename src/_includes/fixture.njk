<li class="fixture{{ ' hide' if helpers.isDateInFuture(fixture.data.date) == false }}" 
    data-team="{{ fixture.data.team }}" 
    data-type="{{ 'fixture' if helpers.isDateInFuture(fixture.data.date) else 'result' }}">
  <h3 class="fixture-date">{{ fixture.data.date | postDateDay }}</h3>
  <h2 class="fixture-match">
    {% if fixture.data.location == 'H' %}
      Apollo 
      {% if fixture.data.homeScore %}
        {{ fixture.data.homeScore }} - {{ fixture.data.awayScore }}
      {% else %}
        vs
      {% endif %} 
    {% endif %}   
    <strong>
      {% if fixture.data.opponent in helpers.opponents %}
        {{ helpers.opponents[fixture.data.opponent] }}
      {% else %}
        {{ fixture.data.opponent }}
      {% endif %}
    </strong>
    {% if fixture.data.location == 'A' %}
      {% if fixture.data.homeScore %}
        {{ fixture.data.homeScore }} - {{ fixture.data.awayScore }}
      {% else %}
        vs
      {% endif %} 
      Apollo
    {% endif %} 
  </h2>
  <span class="fixture-team">
    {% if fixture.data.team in helpers.teams %}
      {{ helpers.teams[fixture.data.team] }}
    {% else %}
      {{ fixture.data.team }}
    {% endif %}
  </span>
  <span class="fixture-location">({{ fixture.data.location }})</span>
</li>